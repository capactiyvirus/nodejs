<!-- index.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Star Wars Quote App</title>
  </head>

  <body>
    <h1>May Node and Express be with you.</h1>

    <form action="/api/courses" method="GET">
      <input type="text" placeholder="name" name="name" />
      <input type="text" placeholder="quote" name="quote" />
      <button type="submit">Submit</button>
    </form>

    <ul class="quotes">
        <!-- Loop through quotes -->
        <% for(var i = 0; i < user.length; i++) {%>
          <li class="quote">
            <!-- Output name from the iterated quote object -->
            <span><%= user[i].firstname %></span>:
            <!-- Output quote from the iterated quote object -->
            <span><%= user[i].lastname %></span>
          </li>
        <% } %>
      </ul>

  </body>
</html>